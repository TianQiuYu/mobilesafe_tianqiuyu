<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/TitleStyle"
        android:text="设置中心" />

    <!-- xmlns:名空间  http://schemas.android.com/apk/res/com.qiuyu.mobilesafe 代表当前组合控件使用自定义属性 -->

    <com.qiuyu.view.SettingItemView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.qiuyu.mobilesafe"
        android:id="@+id/item_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:desoff="自动更新已关闭"
        mobilesafe:deson="自动更新已开启"
        mobilesafe:destitle="自动更新设置" >
    </com.qiuyu.view.SettingItemView>

    <com.qiuyu.view.SettingItemView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.qiuyu.mobilesafe"
        android:id="@+id/item_siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:desoff="归属地显示已关闭"
        mobilesafe:deson="归属地显示已开启"
        mobilesafe:destitle="归属地显示设置" >
    </com.qiuyu.view.SettingItemView>

    <com.qiuyu.view.SettingAddressView
        android:id="@+id/item_address_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.qiuyu.view.SettingAddressView>
    
    <com.qiuyu.view.SettingAddressView
        android:id="@+id/item_toast_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.qiuyu.view.SettingAddressView>

</LinearLayout>